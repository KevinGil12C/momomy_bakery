<!DOCTYPE html>
<html lang="es" class="h-full scroll-smooth">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <meta name="description" content="{{ app_sys.business_name|default('Momomy Bakery') }} - Repostería artesanal con el corazón. Descubre nuestros pasteles, galletas y postres únicos hechos con ingredientes premium.">
    <meta name="keywords" content="repostería, pastelería, postres, mochi, pasteles artesanales, {{ app_sys.business_name|default('Momomy Bakery') }}">
    
    <!-- Open Graph / Social Media -->
    <meta property="og:title" content="{{ title }} | {{ app_sys.business_name|default('Momomy Bakery') }}">
    <meta property="og:description" content="Repostería artesanal con el corazón. Haz tu pedido hoy mismo.">
    <meta property="og:image" content="{{ base_url }}public/img/og-image.jpg">
    <meta property="og:type" content="website">

    <title>{{ title }} | {{ app_sys.business_name|default('Momomy Bakery') }} - Magia Hecha Postre</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#f0427c",
                        "background-light": "#f8f6f6",
                        "background-dark": "#221016",
                    },
                    fontFamily: {
                        "display": ["Plus Jakarta Sans", "sans-serif"]
                    },
                    borderRadius: {"DEFAULT": "1rem", "lg": "2rem", "xl": "3rem", "full": "9999px"},
                },
            },
        }

        // Dark Mode Logic
        function toggleDarkMode() {
            document.documentElement.classList.toggle('dark');
            const isDark = document.documentElement.classList.contains('dark');
            localStorage.setItem('darkMode', isDark);
            updateThemeIcons(isDark);
        }

        function updateThemeIcons(isDark) {
            const icons = document.querySelectorAll('.theme-icon');
            icons.forEach(icon => {
                icon.textContent = isDark ? 'light_mode' : 'dark_mode';
            });
        }

        // Initialize theme
        document.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('darkMode');
            if (savedTheme === 'true') {
                document.documentElement.classList.add('dark');
                updateThemeIcons(true);
            }
        });
    </script>
    
    <style>
        body { font-family: "Plus Jakarta Sans", sans-serif; }
        .glass { background: rgba(255, 255, 255, 0.7); backdrop-filter: blur(15px); }
        .dark .glass { background: rgba(34, 16, 22, 0.7); }
        .scrollbar-hide::-webkit-scrollbar { display: none; }
        .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
        
        .product-card:hover .product-img { transform: scale(1.1); }
        
        @keyframes bounce-subtle {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-5px); }
        }
        .animate-bounce-subtle { animation: bounce-subtle 2s infinite ease-in-out; }
    </style>
    {% block head %}{% endblock %}
</head>
<body class="bg-background-light dark:bg-background-dark font-display text-slate-900 dark:text-slate-100 transition-colors duration-300 min-h-full flex flex-col">

    <!-- WhatsApp Button -->
    <a href="https://wa.me/{{ config.MAIL }}" target="_blank" class="fixed bottom-6 right-6 z-50 size-14 bg-[#25D366] text-white rounded-full flex items-center justify-center shadow-xl hover:scale-110 transition-transform active:scale-95">
        <svg class="size-8 fill-current" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L0 24l6.335-1.662c1.72.937 3.659 1.432 5.633 1.433h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"></path>
        </svg>
    </a>

    {% include 'public/partials/navigation.twig' %}

    <main class="flex-grow">
        {% block content %}{% endblock %}
    </main>

    {% include 'public/partials/footer.twig' %}

    <!-- Cart Overlay (Always ready via JS) -->
    <div id="cart-sidebar" class="fixed inset-y-0 right-0 w-full max-w-sm bg-white dark:bg-slate-900 shadow-2xl z-[60] translate-x-full transition-transform duration-300 flex flex-col">
        <div class="p-6 border-b border-primary/10 flex items-center justify-between">
            <h3 class="text-xl font-black text-slate-900 dark:text-white">Tu Carrito</h3>
            <button onclick="toggleCart()" class="size-10 rounded-xl hover:bg-slate-50 dark:hover:bg-slate-800 flex items-center justify-center text-slate-400">
                <span class="material-symbols-outlined">close</span>
            </button>
        </div>
        <div id="cart-items" class="flex-1 overflow-y-auto p-6 space-y-6 scrollbar-hide">
            <div class="text-center py-20 text-slate-400">Tu carrito está vacío</div>
        </div>
        <div class="p-8 bg-slate-50 dark:bg-slate-800/50 rounded-t-[3rem] space-y-6">
            <div class="flex items-center justify-between">
                <span class="text-slate-500 font-bold">Total:</span>
                <span id="cart-total" class="text-2xl font-black text-primary">$0.00</span>
            </div>
            <button onclick="checkout()" id="btn-checkout" class="w-full py-5 bg-primary text-white rounded-3xl font-black shadow-xl hover:opacity-90 transition-all disabled:opacity-50" disabled>
                FINALIZAR PEDIDO
            </button>
        </div>
    </div>
    <div id="cart-backdrop" onclick="toggleCart()" class="fixed inset-0 bg-slate-900/40 backdrop-blur-sm z-50 hidden opacity-0 transition-opacity"></div>

    <script>
        let cart = JSON.parse(localStorage.getItem('momomy_cart')) || [];

        function toggleCart() {
            const sidebar = document.getElementById('cart-sidebar');
            const backdrop = document.getElementById('cart-backdrop');
            sidebar.classList.toggle('translate-x-full');
            backdrop.classList.toggle('hidden');
            setTimeout(() => backdrop.classList.toggle('opacity-100'), 10);
        }

        function addToCart(p) {
            const qty = p.qty || 1;
            const existing = cart.find(item => item.id === p.id);
            if (existing) {
                existing.qty += qty;
            } else {
                cart.push({ ...p, qty: qty });
            }
            saveCart();
            updateCartUI();
            Swal.fire({
                toast: true,
                position: 'top-end',
                icon: 'success',
                title: '¡Añadido! (' + qty + ')',
                showConfirmButton: false,
                timer: 1500
            });
        }

        function saveCart() {
            localStorage.setItem('momomy_cart', JSON.stringify(cart));
        }

        function updateCartUI() {
            const container = document.getElementById('cart-items');
            const totalLabel = document.getElementById('cart-total');
            const checkoutBtn = document.getElementById('btn-checkout');
            const counts = document.querySelectorAll('.cart-count-badge');

            if (cart.length === 0) {
                container.innerHTML = '<div class="text-center py-20 text-slate-400">Tu carrito está vacío</div>';
                totalLabel.innerText = '$0.00';
                checkoutBtn.disabled = true;
                counts.forEach(c => c.classList.add('hidden'));
                return;
            }

            let total = 0;
            let totalQty = 0;
            container.innerHTML = cart.map((item, index) => {
                total += item.price * item.qty;
                totalQty += item.qty;
                return `
                    <div class="flex items-center gap-4 group">
                        <div class="size-16 rounded-xl overflow-hidden bg-primary/5 flex-shrink-0">
                            <img src="${item.img || '{{ base_url }}public/uploads/products/placeholder.png'}" class="size-full object-cover">
                        </div>
                        <div class="flex-1 min-w-0">
                            <h4 class="font-bold text-sm truncate dark:text-white">${item.name}</h4>
                            <div class="flex items-center gap-2 mt-1">
                                <div class="flex items-center bg-slate-100 dark:bg-slate-800 rounded-lg p-1">
                                    <button onclick="changeQty(${item.id}, -1)" class="size-6 flex items-center justify-center hover:text-primary transition-colors text-xs font-bold">-</button>
                                    <span class="w-8 text-center text-[10px] font-black dark:text-white">${item.qty}</span>
                                    <button onclick="changeQty(${item.id}, 1)" class="size-6 flex items-center justify-center hover:text-primary transition-colors text-xs font-bold">+</button>
                                </div>
                                <p class="text-[10px] text-slate-400 font-bold">$${(item.price * item.qty).toFixed(2)}</p>
                            </div>
                        </div>
                        <button onclick="removeFromCart(${item.id})" class="text-slate-300 hover:text-primary transition-colors opacity-0 group-hover:opacity-100">
                            <span class="material-symbols-outlined text-sm">delete</span>
                        </button>
                    </div>
                `;
            }).join('');

            totalLabel.innerText = `$${total.toFixed(2)}`;
            checkoutBtn.disabled = false;
            counts.forEach(c => {
                c.innerText = totalQty;
                c.classList.remove('hidden');
            });
        }

        function changeQty(id, delta) {
            const item = cart.find(i => i.id === id);
            if (item) {
                item.qty += delta;
                if (item.qty <= 0) {
                    removeFromCart(id);
                } else {
                    saveCart();
                    updateCartUI();
                }
            }
        }

        function removeFromCart(id) {
            cart = cart.filter(item => item.id !== id);
            saveCart();
            updateCartUI();
        }

        async function checkout() {
            const { value: formValues } = await Swal.fire({
                title: 'Confirmar Pedido',
                html:
                    '<input id="swal-name" class="swal2-input" placeholder="Nombre completo">' +
                    '<input id="swal-email" class="swal2-input" placeholder="Correo electrónico">' +
                    '<input id="swal-phone" class="swal2-input" placeholder="Teléfono">' +
                    '<textarea id="swal-notes" class="swal2-textarea" placeholder="Notas adicionales"></textarea>',
                focusConfirm: false,
                confirmButtonText: 'PROCESAR PEDIDO',
                confirmButtonColor: '#f0427c',
                preConfirm: () => {
                    const name = document.getElementById('swal-name').value;
                    const email = document.getElementById('swal-email').value;
                    const phone = document.getElementById('swal-phone').value;
                    if (!name || !email || !phone) {
                        Swal.showValidationMessage('Por favor completa los campos básicos');
                        return false;
                    }
                    return {
                        customer_name: name,
                        customer_email: email,
                        customer_phone: phone,
                        notes: document.getElementById('swal-notes').value,
                        total_amount: cart.reduce((s, i) => s + (i.price * i.qty), 0),
                        items: cart.map(i => ({ product_id: i.id, quantity: i.qty, price: i.price }))
                    }
                }
            });

            if (formValues) {
                try {
                    const res = await fetch('{{ base_url }}api/order', {
                        method: 'POST',
                        body: JSON.stringify(formValues)
                    });
                    const data = await res.json();
                    if (data.order_id) {
                        Swal.fire('¡Éxito!', 'Pedido recibido correctamente.', 'success');
                        cart = [];
                        saveCart();
                        updateCartUI();
                        toggleCart();
                    }
                } catch (e) {
                    Swal.fire('Error', 'No se pudo procesar el pedido.', 'error');
                }
            }
        }

        updateCartUI();
    </script>

    {% block scripts %}{% endblock %}
</body>
</html>
