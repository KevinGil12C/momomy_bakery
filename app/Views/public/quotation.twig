{% extends "public/layout.twig" %}

{% block content %}
<section class="max-w-4xl mx-auto px-6 py-12 lg:py-20">
    <div class="text-center mb-16">
        <span class="inline-block px-4 py-2 rounded-full bg-primary/10 text-primary text-xs font-black mb-6 uppercase tracking-widest animate-pulse">Servicios Especiales</span>
        <h1 class="text-5xl md:text-7xl font-black mb-8 tracking-tighter text-slate-900 dark:text-white">
            Tu evento, <span class="text-primary italic text-6xl md:text-8xl">Inolvidable</span>
        </h1>
        <p class="text-slate-500 dark:text-slate-400 text-lg max-w-2xl mx-auto leading-relaxed font-medium">
            ¿Buscas una mesa de postres o un pastel personalizado para tu boda, cumpleaños o evento corporativo? Solicita una cotización sin compromiso.
        </p>
    </div>

    <div class="bg-white dark:bg-slate-800 p-10 md:p-16 rounded-[4rem] shadow-2xl border border-primary/5 relative overflow-hidden">
        <div class="absolute top-0 right-0 size-64 bg-primary/5 rounded-full -mr-32 -mt-32 blur-3xl"></div>
        <div class="absolute bottom-0 left-0 size-64 bg-primary/5 rounded-full -ml-32 -mb-32 blur-3xl"></div>
        
        <h2 class="text-2xl font-black mb-12 flex items-center gap-4 dark:text-white italic relative z-10">
            <span class="size-12 rounded-2xl bg-primary/10 text-primary flex items-center justify-center">
                <span class="material-symbols-outlined">receipt_long</span>
            </span>
            Detalles de tu Petición
        </h2>

        <form id="quotation-form" class="space-y-10 relative z-10">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
                <div class="flex flex-col gap-3">
                    <label class="text-xs font-black uppercase tracking-widest text-slate-400 px-2 transition-colors">Nombre(s)</label>
                    <input name="first_name" class="w-full rounded-2xl border-none bg-background-light dark:bg-slate-700/50 focus:ring-4 focus:ring-primary/20 h-16 px-6 outline-none transition-all dark:text-white font-bold" placeholder="Tu nombre" type="text" required/>
                </div>
                <div class="flex flex-col gap-3">
                    <label class="text-xs font-black uppercase tracking-widest text-slate-400 px-2">Apellido(s)</label>
                    <input name="last_name" class="w-full rounded-2xl border-none bg-background-light dark:bg-slate-700/50 focus:ring-4 focus:ring-primary/20 h-16 px-6 outline-none transition-all dark:text-white font-bold" placeholder="Tu apellido" type="text" required/>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
                <div class="flex flex-col gap-3">
                    <label class="text-xs font-black uppercase tracking-widest text-slate-400 px-2">Correo de Contacto</label>
                    <input name="email" class="w-full rounded-2xl border-none bg-background-light dark:bg-slate-700/50 focus:ring-4 focus:ring-primary/20 h-16 px-6 outline-none transition-all dark:text-white font-bold" placeholder="ejemplo@correo.com" type="email" required/>
                </div>
                <div class="flex flex-col gap-3">
                    <label class="text-xs font-black uppercase tracking-widest text-slate-400 px-2">Motivo / Asunto</label>
                    <select name="subject" class="w-full rounded-2xl border-none bg-background-light dark:bg-slate-700/50 focus:ring-4 focus:ring-primary/20 h-16 px-6 outline-none transition-all dark:text-white font-bold appearance-none">
                        <option value="Boda">Boda / Matrimonio</option>
                        <option value="Cumpleaños">Fiesta de Cumpleaños</option>
                        <option value="Corporativo">Evento Corporativo</option>
                        <option value="Mesa de Postres">Mesa de Postres Completa</option>
                        <option value="Otro">Otro pedido especial</option>
                    </select>
                </div>
            </div>

            <div class="flex flex-col gap-3">
                <label class="text-xs font-black uppercase tracking-widest text-slate-400 px-2">Cuéntanos tu idea</label>
                <textarea name="content" class="w-full rounded-[3rem] border-none bg-background-light dark:bg-slate-700/50 focus:ring-4 focus:ring-primary/20 p-10 outline-none transition-all resize-none dark:text-white font-bold" placeholder="Describe sabores, número de personas, fecha estimada, etc... ✨" rows="8" required></textarea>
            </div>

            <!-- Image Upload Field -->
            <div class="flex flex-col gap-3">
                <label class="text-xs font-black uppercase tracking-widest text-slate-400 px-2">Imagen de Referencia (Opcional)</label>
                <div class="relative group">
                    <input type="file" name="reference_image" id="ref_image" class="hidden" accept="image/*" onchange="previewImage(this)"/>
                    <label for="ref_image" class="w-full flex items-center gap-4 p-6 bg-primary/5 border-2 border-dashed border-primary/20 rounded-2xl cursor-pointer hover:bg-primary/10 hover:border-primary transition-all group">
                        <span class="size-12 rounded-xl bg-white dark:bg-slate-700 flex items-center justify-center text-primary group-hover:scale-110 transition-transform">
                            <span class="material-symbols-outlined">image</span>
                        </span>
                        <div class="text-left">
                            <p class="text-sm font-black dark:text-white" id="file-label">Seleccionar imagen</p>
                            <p class="text-[10px] text-slate-400 font-bold uppercase tracking-widest">JPG, PNG o WEBP (Máx 5MB)</p>
                        </div>
                    </label>
                    <div id="image-preview" class="mt-4 hidden animate-in fade-in zoom-in duration-300">
                        <img src="" class="h-32 rounded-2xl border-4 border-white dark:border-slate-800 shadow-xl"/>
                    </div>
                </div>
            </div>

            <div class="pt-6">
                <button class="w-full md:w-auto px-16 py-6 bg-slate-900 dark:bg-primary text-white rounded-3xl font-black text-xl hover:opacity-90 shadow-2xl shadow-primary/30 active:scale-95 transition-all flex items-center justify-center gap-4" type="submit">
                    SOLICITAR COTIZACIÓN
                    <span class="material-symbols-outlined">auto_awesome</span>
                </button>
                <p class="text-center md:text-left mt-6 text-xs text-slate-400 font-bold uppercase tracking-widest">
                    Te responderemos con un presupuesto formal en menos de 24 horas.
                </p>
            </div>
        </form>
    </div>

    <!-- Features Section -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-20">
        <div class="bg-primary/5 p-8 rounded-[3rem] border border-primary/10 flex flex-col items-center text-center">
            <span class="material-symbols-outlined text-primary text-4xl mb-4">cake</span>
            <h4 class="font-black text-lg mb-2">Diseños Únicos</h4>
            <p class="text-xs text-slate-500 font-medium">Creamos arte comestible basado en tu visión personal.</p>
        </div>
        <div class="bg-primary/5 p-8 rounded-[3rem] border border-primary/10 flex flex-col items-center text-center">
            <span class="material-symbols-outlined text-primary text-4xl mb-4">palette</span>
            <h4 class="font-black text-lg mb-2">Personalización</h4>
            <p class="text-xs text-slate-500 font-medium">Elige sabores, colores y texturas sin límites.</p>
        </div>
        <div class="bg-primary/5 p-8 rounded-[3rem] border border-primary/10 flex flex-col items-center text-center">
            <span class="material-symbols-outlined text-primary text-4xl mb-4">local_shipping</span>
            <h4 class="font-black text-lg mb-2">Entrega Puntual</h4>
            <p class="text-xs text-slate-500 font-medium">Llevamos tu pedido al lugar del evento con total cuidado.</p>
        </div>
    </div>
</section>
{% endblock %}

{% block scripts %}
<script>
    function previewImage(input) {
        const file = input.files[0];
        const label = document.getElementById('file-label');
        const previewDiv = document.getElementById('image-preview');
        const previewImg = previewDiv.querySelector('img');

        if (file) {
            label.innerText = file.name;
            const reader = new FileReader();
            reader.onload = function(e) {
                previewImg.src = e.target.result;
                previewDiv.classList.remove('hidden');
            }
            reader.readAsDataURL(file);
        }
    }

    document.getElementById('quotation-form').addEventListener('submit', async (e) => {
        e.preventDefault();
        const formData = new FormData(e.target);
        
        // Map fields to match API expectations if necessary
        formData.append('customer_first_name', formData.get('first_name'));
        formData.append('customer_last_name', formData.get('last_name'));
        formData.append('customer_email', formData.get('email'));

        try {
            Swal.fire({
                title: 'Enviando petición...',
                allowOutsideClick: false,
                didOpen: () => { Swal.showLoading(); }
            });

            const response = await fetch('{{ base_url }}api/quotation/request', {
                method: 'POST',
                body: formData
            });

            const res = await response.json();
            if (res.id) {
                Swal.fire({
                    icon: 'success',
                    title: '¡Petición Recibida!',
                    text: 'Estamos revisando tu solicitud y pronto te enviaremos el presupuesto por correo.',
                    confirmButtonColor: '#f0427c'
                });
                e.target.reset();
                document.getElementById('image-preview').classList.add('hidden');
                document.getElementById('file-label').innerText = 'Seleccionar imagen';
            } else {
                throw new Error();
            }
        } catch (error) {
            Swal.fire('Error', 'No pudimos procesar tu solicitud ahora. Intenta más tarde.', 'error');
        }
    });
</script>
{% endblock %}
