{% extends "public/layout.twig" %}

{% block content %}
<!-- Hero Section -->
<section class="max-w-7xl mx-auto px-6 py-12 lg:py-20">
    <div class="flex flex-col lg:flex-row gap-12 items-center">
        <div class="w-full lg:w-1/2 space-y-8">
            <div class="inline-flex items-center gap-2 px-4 py-2 bg-primary/10 rounded-full text-primary font-bold text-sm">
                <span class="material-symbols-outlined text-lg" aria-hidden="true">stars</span>
                {% if special_of_week %}Especial de la Semana{% else %}Hecho con amor y ternura{% endif %}
            </div>
            <h1 class="text-5xl lg:text-7xl font-black leading-tight text-slate-900 dark:text-slate-50 tracking-tighter italic">
                {% if special_of_week %}
                    {{ special_of_week.name }}
                {% else %}
                    Dulces momentos con <span class="text-primary">Momomi</span>
                {% endif %}
            </h1>
            <p class="text-lg text-slate-600 dark:text-slate-400 leading-relaxed max-w-xl font-medium">
                {% if special_of_week %}
                    {{ special_of_week.description }}
                {% else %}
                    Descubre el lado m√°s tierno y delicioso de la reposter√≠a artesanal. Cada bocado es una peque√±a obra de arte dise√±ada para alegrar tu d√≠a.
                {% endif %}
            </p>
            {% if special_of_week %}
            <div class="flex items-center gap-4">
                <div class="flex text-amber-400">
                    {% for i in 1..5 %}
                    <span class="material-symbols-outlined text-xl" style="font-variation-settings: 'FILL' {{ i <= special_of_week.avg_rating ? 1 : 0 }}">star</span>
                    {% endfor %}
                </div>
                <span class="text-xs font-black text-slate-400 uppercase tracking-widest">{{ special_of_week.total_reviews }} Rese√±as</span>
            </div>
            {% endif %}
            <div class="flex flex-wrap gap-4 pt-4">
                {% if special_of_week %}
                    <div class="flex items-center bg-white/50 dark:bg-white/5 rounded-[2rem] p-1 border border-primary/10 w-fit">
                        <button onclick="const i = document.getElementById('hero-qty'); if(i.value > 1) i.value--" class="size-12 flex items-center justify-center font-black hover:text-primary dark:text-white">-</button>
                        <input type="number" id="hero-qty" value="1" min="1" class="w-12 bg-transparent border-none text-center font-black focus:ring-0 dark:text-white text-sm">
                        <button onclick="const i = document.getElementById('hero-qty'); i.value++" class="size-12 flex items-center justify-center font-black hover:text-primary dark:text-white">+</button>
                    </div>
                    <button onclick="const q = document.getElementById('hero-qty'); addToCart({id: {{ special_of_week.id }}, name: '{{ special_of_week.name }}', price: {{ special_of_week.price }}, img: '{{ special_of_week.image_url }}', qty: parseInt(q.value)})" 
                            class="bg-primary text-white px-10 py-5 rounded-[2rem] font-black text-lg hover:shadow-2xl hover:shadow-primary/30 transition-all flex items-center gap-3 active:scale-95 group">
                        PEDIR AHORA (${{ special_of_week.price|number_format(2) }})
                        <span class="material-symbols-outlined group-hover:translate-x-1 transition-transform">arrow_forward</span>
                    </button>
                {% else %}
                    <a href="{{ base_url }}catalog" class="bg-primary text-white px-10 py-5 rounded-[2rem] font-black text-lg hover:shadow-2xl hover:shadow-primary/30 transition-all flex items-center gap-3 active:scale-95 group">
                        VER PRODUCTOS
                        <span class="material-symbols-outlined group-hover:translate-x-1 transition-transform">arrow_forward</span>
                    </a>
                    <a href="#especialidades" class="border-2 border-primary/20 bg-white/50 dark:bg-white/5 px-10 py-5 rounded-[2rem] font-black text-lg hover:border-primary transition-all dark:text-white uppercase tracking-tighter">
                        Especialidades
                    </a>
                {% endif %}
            </div>
        </div>
        <div class="w-full lg:w-1/2 relative group">
            <div class="absolute -inset-4 bg-primary/10 rounded-[3rem] blur-2xl group-hover:bg-primary/20 transition-all"></div>
            <div class="relative w-full aspect-square rounded-[3rem] overflow-hidden shadow-2xl border-8 border-white dark:border-slate-800">
                <img src="{{ special_of_week.image_url }}" 
                     alt="{{ special_of_week.name|default('Momomi Bakery') }}" loading="eager" class="size-full object-cover group-hover:scale-110 transition-transform duration-700">
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="max-w-7xl mx-auto px-6 py-20">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {% set stats_items = [
            {icon: 'local_mall', val: '500+', label: 'Pedidos'},
            {icon: 'mood', val: '100%', label: 'Felicidad'},
            {icon: 'oven_gen', val: 'Fresco', label: 'Cada d√≠a'},
            {icon: 'verified', val: 'Eco', label: 'Premium'}
        ] %}
        {% for s in stats_items %}
        <div class="text-center space-y-2">
            <span class="material-symbols-outlined text-primary text-3xl" aria-hidden="true">{{ s.icon }}</span>
            <div class="text-3xl font-black italic tracking-tighter dark:text-white">{{ s.val }}</div>
            <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">{{ s.label }}</p>
        </div>
        {% endfor %}
    </div>
</section>

<!-- News Section (Novedades) -->
{% if news|length > 0 %}
<section class="max-w-7xl mx-auto px-6 py-24 border-t border-primary/5">
    <div class="flex flex-col md:flex-row md:items-end justify-between mb-16 gap-6">
        <div class="space-y-2">
            <h2 class="text-4xl font-black text-slate-900 dark:text-white tracking-tighter italic">Novedades Dulces</h2>
            <p class="text-slate-500 font-medium italic">Ent√©rate de nuestras √∫ltimas creaciones y promociones m√°gicas üç∞</p>
        </div>
        <span class="text-[10px] font-black uppercase tracking-widest text-primary bg-primary/10 px-4 py-2 rounded-full border border-primary/10">Lo m√°s reciente</span>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {% for item in news %}
        <article class="glass rounded-[3rem] overflow-hidden border border-white/20 shadow-xl flex flex-col group hover:scale-[1.02] transition-all">
            <div class="aspect-video relative overflow-hidden">
                <img src="{{ item.image_url|default('https://images.unsplash.com/photo-1555507036-ab1f4038808a?auto=format&fit=crop&q=80&w=800') }}" 
                     alt="{{ item.title }}" loading="lazy" class="size-full object-cover group-hover:scale-110 transition-transform duration-700">
            </div>
            <div class="p-8 flex-1 flex flex-col gap-4">
                <span class="text-[10px] font-black text-primary uppercase tracking-widest">{{ item.created_at|date('d M, Y') }}</span>
                <h3 class="text-xl font-black text-slate-900 dark:text-white line-clamp-2 tracking-tight italic">{{ item.title }}</h3>
                <p class="text-sm text-slate-500 dark:text-slate-400 line-clamp-3 font-medium italic leading-relaxed">{{ item.content|striptags }}</p>
                <div class="mt-auto pt-6 border-t border-slate-100 dark:border-white/5">
                    <a href="{{ base_url }}admin/news" class="text-xs font-black text-primary flex items-center gap-2 group/btn uppercase tracking-widest">
                        Leer m√°s <span class="material-symbols-outlined text-sm group-hover/btn:translate-x-1 transition-transform">arrow_right_alt</span>
                    </a>
                </div>
            </div>
        </article>
        {% endfor %}
    </div>
</section>
{% endif %}

<!-- Especialidades Section -->
<section id="especialidades" class="bg-white dark:bg-slate-900/50 py-24 rounded-[4rem]">
    <div class="max-w-7xl mx-auto px-6">
        <div class="flex items-end justify-between mb-16 gap-6">
            <div class="space-y-2">
                <h2 class="text-4xl font-black text-slate-900 dark:text-white italic tracking-tighter">Nuestras Especialidades</h2>
                <p class="text-slate-500 font-medium tracking-wide italic">Recetas exclusivas que amamos preparar cada ma√±ana</p>
            </div>
            <a href="{{ base_url }}catalog" class="text-primary font-black flex items-center gap-2 hover:underline group uppercase text-xs tracking-widest">
                Ver Todo <span class="material-symbols-outlined text-sm group-hover:translate-x-1 transition-transform">chevron_right</span>
            </a>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            {% for product in specialties|slice(0, 4) %}
            <div class="group bg-background-light dark:bg-slate-800 p-5 rounded-[2.5rem] hover:shadow-2xl transition-all border border-transparent hover:border-primary/10">
                <a href="{{ base_url }}product/{{ product.id }}" class="aspect-square rounded-[2rem] overflow-hidden mb-6 relative block">
                    {% if loop.first %}
                        <div class="absolute top-4 left-4 bg-white/90 dark:bg-slate-900/80 px-4 py-2 rounded-full text-[10px] font-black text-primary z-10 shadow-sm uppercase">Destacado</div>
                    {% endif %}
                    <img src="{{ product.image_url }}" 
                         alt="{{ product.name }}" loading="lazy" class="size-full object-cover transition-transform duration-700 group-hover:scale-110">
                </a>
                <h4 class="text-xl font-black mb-1 dark:text-white tracking-tight italic">{{ product.name }}</h4>
                <div class="flex items-center gap-2 mb-3">
                    <div class="flex text-amber-400">
                        {% for i in 1..5 %}
                        <span class="material-symbols-outlined text-xs" style="font-variation-settings: 'FILL' {{ i <= product.avg_rating ? 1 : 0 }}">star</span>
                        {% endfor %}
                    </div>
                </div>
                <p class="text-slate-500 text-xs font-medium line-clamp-2 h-8 italic">{{ product.description }}</p>
                <div class="mt-8 flex items-center justify-between gap-2">
                    <span class="text-primary font-black text-2xl tracking-tighter">${{ product.price|number_format(2) }}</span>
                    <div class="flex items-center bg-background-light dark:bg-slate-700 rounded-2xl p-1 border border-primary/5">
                        <input type="number" id="spec-qty-{{ product.id }}" value="1" min="1" class="w-10 bg-transparent border-none text-center font-black text-[10px] focus:ring-0 dark:text-white p-0">
                        <button onclick="const q = document.getElementById('spec-qty-{{ product.id }}'); addToCart({id: {{ product.id }}, name: '{{ product.name }}', price: {{ product.price }}, img: '{{ product.image_url }}', qty: parseInt(q.value)})" 
                                class="size-10 rounded-xl bg-slate-900 dark:bg-primary text-white flex items-center justify-center hover:scale-110 transition-all active:scale-95 shadow-xl"
                                aria-label="A√±adir {{ product.name }} al carrito">
                            <span class="material-symbols-outlined text-sm" aria-hidden="true">shopping_basket</span>
                        </button>
                    </div>
                </div>
            </div>
            {% else %}
            <div class="col-span-full py-20 text-center opacity-30 italic font-black">
                Pr√≥ximamente nuestras especialidades...
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Quote Section -->
<section class="py-32 text-center max-w-3xl mx-auto px-6">
    <span class="material-symbols-outlined text-primary/20 text-8xl mb-4 italic" aria-hidden="true">format_quote</span>
    <p class="text-3xl md:text-4xl font-black text-slate-900 dark:text-white leading-tight italic tracking-tight">
        "Cada pastel cuenta una historia y cada mordisco es un recuerdo que perdura en el coraz√≥n."
    </p>
    <p class="mt-8 text-primary font-black uppercase tracking-widest text-xs">‚Äî Chef Momomi</p>
</section>
{% endblock %}
