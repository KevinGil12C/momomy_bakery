{% extends "admin/layout.twig" %}

{% block body %}
<div class="flex h-screen overflow-hidden">
    <!-- Sidebar -->
    {% include 'admin/partials/sidebar.twig' with {'active': 'settings'} %}

    <main class="flex-1 flex flex-col min-w-0 overflow-hidden">
        <!-- Header -->
        {% include 'admin/partials/header.twig' with {'breadcrumbs': [{label: 'Configuración', url: '#'}]} %}

        <div class="flex-1 overflow-y-auto p-8 custom-scrollbar">
            <div class="mb-8">
                <h2 class="text-3xl font-black text-slate-900 dark:text-white">Configuración del Negocio</h2>
                <p class="text-slate-500 text-sm font-medium">Esta información aparecerá en tus PDFs y correos automáticos</p>
            </div>

            <form action="{{ base_url }}admin/settings/update" method="POST" enctype="multipart/form-data" class="w-full space-y-8">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <!-- Basic Info -->
                    <div class="glass p-8 rounded-[2.5rem] border border-white/20 shadow-2xl space-y-6">
                        <h4 class="text-lg font-bold flex items-center gap-2 text-primary">
                            <span class="material-symbols-outlined">store</span> Datos Generales
                        </h4>
                        
                        <div class="mb-4">
                            <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-4 px-1">Logo del Negocio</label>
                            
                            <!-- Drag and Drop Zone -->
                            <div class="relative group cursor-pointer rounded-3xl" id="drop-zone" onclick="document.getElementById('file-upload').click()"
                                 ondragover="event.preventDefault(); this.classList.add('scale-[1.02]')"
                                 ondragleave="event.preventDefault(); this.classList.remove('scale-[1.02]')"
                                 ondrop="handleDrop(event)">
                                
                                <input type="file" id="file-upload" name="logo" accept="image/*" class="hidden" onchange="previewLogo(this)">
                                
                                <div id="logo-preview-container" class="aspect-[21/9] sm:aspect-video w-full rounded-3xl border-2 border-dashed border-primary/20 flex flex-col items-center justify-center bg-slate-50 dark:bg-slate-800/50 transition-all overflow-hidden relative group-hover:border-primary/50 group-hover:bg-primary/5 shadow-inner">
                                    <img src="{{ business.logo_url|default('') }}" id="preview-img" class="absolute inset-0 w-full h-full object-contain p-6 z-10 transition-opacity duration-300 {{ business.logo_url ? '' : 'hidden' }} group-hover:opacity-40" />
                                    
                                    <div id="upload-placeholder" class="text-center z-10 p-6 flex flex-col items-center justify-center transition-all duration-300 {{ business.logo_url ? 'hidden' : '' }}">
                                        <div class="size-16 rounded-[1.5rem] bg-white dark:bg-slate-700 text-primary flex items-center justify-center mb-4 group-hover:-translate-y-2 transition-transform shadow-xl shadow-primary/10 mx-auto">
                                            <span class="material-symbols-outlined text-3xl font-light">cloud_upload</span>
                                        </div>
                                        <p class="font-black text-slate-700 dark:text-slate-300 text-sm">Arrastra tu logo aquí o <span class="text-primary italic">explorar</span></p>
                                        <p class="text-[10px] text-slate-400 font-bold uppercase tracking-widest mt-2">PNG o JPG (Max 5MB)</p>
                                    </div>

                                    <div id="change-overlay" class="absolute inset-0 bg-slate-900/60 backdrop-blur-sm z-20 items-center justify-center opacity-0 transition-opacity duration-300 flex {{ business.logo_url ? 'group-hover:opacity-100' : 'hidden' }}">
                                        <div class="flex flex-col items-center transform translate-y-4 group-hover:translate-y-0 transition-transform">
                                            <span class="material-symbols-outlined text-4xl text-white mb-2 font-light">swap_horiz</span>
                                            <span class="text-white font-black text-[10px] tracking-widest uppercase">Cambiar Logo</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2 px-1">Nombre del Negocio</label>
                            <input type="text" name="business_name" value="{{ business.business_name }}" required
                                class="w-full px-4 py-3 rounded-2xl border-0 bg-background-light dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary outline-none shadow-sm transition-all">
                        </div>

                        <div>
                            <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2 px-1">Email Público</label>
                            <input type="email" name="email" value="{{ business.email }}" required
                                class="w-full px-4 py-3 rounded-2xl border-0 bg-background-light dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary outline-none shadow-sm transition-all">
                        </div>

                        <div>
                            <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2 px-1">Teléfono de Contacto</label>
                            <input type="text" name="phone" value="{{ business.phone }}" required
                                class="w-full px-4 py-3 rounded-2xl border-0 bg-background-light dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary outline-none shadow-sm transition-all">
                        </div>
                    </div>

                    <!-- Tax & Address -->
                    <div class="glass p-8 rounded-[2.5rem] border border-white/20 shadow-2xl space-y-6">
                        <h4 class="text-lg font-bold flex items-center gap-2 text-primary">
                            <span class="material-symbols-outlined">location_on</span> Ubicación y Fiscal
                        </h4>

                        <div>
                            <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2 px-1">Dirección Física</label>
                            <textarea name="address" rows="3" required
                                class="w-full px-4 py-3 rounded-2xl border-0 bg-background-light dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary outline-none shadow-sm transition-all">{{ business.address }}</textarea>
                        </div>

                        <div>
                            <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2 px-1">ID Fiscal / RFC (Opcional)</label>
                            <input type="text" name="tax_id" value="{{ business.tax_id }}"
                                class="w-full px-4 py-3 rounded-2xl border-0 bg-background-light dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary outline-none shadow-sm transition-all"
                                placeholder="Ej: MOMO123456ABC">
                        </div>
                    </div>
                </div>

                <div class="flex justify-end">
                    <button type="submit" class="bg-primary text-white px-10 py-4 rounded-2xl font-bold flex items-center gap-2 shadow-lg shadow-primary/30 hover:scale-[1.02] transition-transform">
                        <span class="material-symbols-outlined">save</span> Actualizar Información
                    </button>
                </div>
            </form>
        </div>
    </main>
</div>
{% endblock %}

{% block scripts %}
<script>
    function handleDrop(e) {
        e.preventDefault();
        e.stopPropagation();
        
        const dropZone = document.getElementById('drop-zone');
        dropZone.classList.remove('scale-[1.02]');

        if (e.dataTransfer.files && e.dataTransfer.files[0]) {
            const fileInput = document.getElementById('file-upload');
            // Check if DatTransfer is supported
            try {
                const dt = new DataTransfer();
                dt.items.add(e.dataTransfer.files[0]);
                fileInput.files = dt.files;
            } catch(err) {
                // Fallback for older browsers
                console.warn("DataTransfer no soportado para actualizar input files");
            }
            previewLogo(fileInput);
        }
    }

    function previewLogo(input) {
        const file = input.files && input.files[0] ? input.files[0] : (input.dataTransfer ? input.dataTransfer.files[0] : null);
        
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                // Get elements
                const img = document.getElementById('preview-img');
                const placeholder = document.getElementById('upload-placeholder');
                const overlay = document.getElementById('change-overlay');
                
                // Update image src and show it
                img.src = e.target.result;
                img.classList.remove('hidden');
                
                // Hide placeholder
                if (placeholder) {
                    placeholder.classList.add('hidden');
                }
                
                // Active change overlay
                if (overlay) {
                    overlay.classList.remove('hidden');
                    overlay.classList.add('group-hover:opacity-100');
                }
            }
            reader.readAsDataURL(file);
        }
    }
</script>
{% endblock %}
