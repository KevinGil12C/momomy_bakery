{% extends "admin/layout.twig" %}

{% block body %}
<div class="flex h-screen overflow-hidden">
    <!-- Sidebar -->
    {% include 'admin/partials/sidebar.twig' with {'active': 'inventory'} %}

    <main class="flex-1 flex flex-col min-w-0 overflow-hidden">
        <!-- Header -->
        {% include 'admin/partials/header.twig' with {'breadcrumbs': [
            {label: 'Inventario', url: 'admin/inventory'},
            {label: 'Categorías', url: '#'}
        ]} %}

        <div class="flex-1 overflow-y-auto p-8 custom-scrollbar">
            <div class="mb-8 flex justify-between items-end">
                <div>
                    <h2 class="text-3xl font-black text-slate-900 dark:text-white">Categorías</h2>
                    <p class="text-slate-500 text-sm font-medium">Gestiona las agrupaciones de tus postres</p>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Add Category Form -->
                <div class="lg:col-span-1">
                    <div class="glass p-8 rounded-[2.5rem] border border-white/20 shadow-2xl">
                        <h3 class="text-lg font-black text-slate-900 dark:text-white mb-6 italic">Nueva Categoría</h3>
                        <form action="{{ base_url }}admin/categories/store" method="POST" class="space-y-6">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                            <div>
                                <label class="block text-xs font-black uppercase tracking-widest text-slate-400 mb-3 px-1">Nombre</label>
                                <input type="text" name="name" required
                                    class="w-full px-6 py-4 rounded-2xl border-0 bg-background-light dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-4 focus:ring-primary/20 outline-none transition-all font-bold"
                                    placeholder="Ej: Roles de Canela">
                            </div>
                            <button type="submit" class="w-full bg-primary text-white py-4 rounded-2xl font-black flex items-center justify-center gap-2 shadow-lg shadow-primary/30 hover:scale-[1.02] active:scale-95 transition-all">
                                <span class="material-symbols-outlined">add</span> CREAR CATEGORÍA
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Categories List -->
                <div class="lg:col-span-2">
                    <div class="glass rounded-[2.5rem] border border-white/20 shadow-2xl overflow-hidden">
                        <table class="w-full text-left">
                            <thead class="bg-slate-50 dark:bg-slate-800/50 border-b border-slate-100 dark:border-white/5">
                                <tr>
                                    <th class="px-8 py-5 text-[10px] font-black uppercase tracking-widest text-slate-400">ID</th>
                                    <th class="px-8 py-5 text-[10px] font-black uppercase tracking-widest text-slate-400">Nombre</th>
                                    <th class="px-8 py-5 text-[10px] font-black uppercase tracking-widest text-slate-400 text-right">Acciones</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-slate-100 dark:divide-white/5">
                                {% for category in categories %}
                                <tr class="hover:bg-slate-50 dark:hover:bg-white/5 transition-colors group">
                                    <td class="px-8 py-5">
                                        <span class="text-xs font-black text-slate-400 group-hover:text-primary transition-colors">#{{ category.id }}</span>
                                    </td>
                                    <td class="px-8 py-5">
                                        <span class="font-bold text-slate-700 dark:text-slate-300">{{ category.name }}</span>
                                    </td>
                                    <td class="px-8 py-5 text-right">
                                        <button onclick="confirmDelete({{ category.id }})" class="size-10 rounded-xl bg-red-50 dark:bg-red-500/10 text-red-500 flex items-center justify-center hover:scale-110 active:scale-95 transition-all">
                                            <span class="material-symbols-outlined text-xl">delete</span>
                                        </button>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        {% if not categories %}
                        <div class="p-20 text-center">
                            <span class="material-symbols-outlined text-6xl text-slate-200 mb-4">category</span>
                            <p class="text-slate-400 font-bold italic">No hay categorías registradas aún.</p>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<script>
    function confirmDelete(id) {
        Swal.fire({
            title: '¿Estás seguro?',
            text: "Se eliminará la categoría. Asegúrate de que no haya productos usándola.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#f0427c',
            cancelButtonColor: '#94a3b8',
            confirmButtonText: 'Sí, eliminar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `{{ base_url }}admin/categories/delete/${id}`;
            }
        })
    }
</script>
{% endblock %}
