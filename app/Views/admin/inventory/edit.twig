{% extends "admin/layout.twig" %}

{% block body %}
<div class="flex h-screen overflow-hidden">
    <!-- Sidebar -->
    {% include 'admin/partials/sidebar.twig' with {'active': 'inventory'} %}

    <main class="flex-1 flex flex-col min-w-0 overflow-hidden">
        <!-- Header -->
        {% include 'admin/partials/header.twig' with {'breadcrumbs': [
            {label: 'Inventario', url: 'admin/inventory'},
            {label: (product ? 'Editar' : 'Nuevo'), url: '#'}
        ]} %}

        <div class="flex-1 overflow-y-auto p-8 custom-scrollbar">
            <div class="mb-8">
                <h2 class="text-3xl font-black text-slate-900 dark:text-white">{% if product %}Editar{% else %}Nuevo{% endif %} Postre</h2>
                <p class="text-slate-500 text-sm font-medium">Completa los detalles del producto</p>
            </div>
            <form action="{{ base_url }}admin/inventory/{% if product %}update/{{ product.id }}{% else %}store{% endif %}" method="POST" enctype="multipart/form-data" class="max-w-4xl mx-auto space-y-8">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    <!-- Image Upload -->
                    <div class="lg:col-span-1">
                        <div class="glass p-6 rounded-[2.5rem] border border-white/20 shadow-2xl text-center">
                            <h3 class="text-sm font-bold uppercase tracking-wider text-slate-500 mb-6 px-1">Foto del Postre</h3>
                            <div class="relative group cursor-pointer aspect-square rounded-[2rem] overflow-hidden bg-slate-100 dark:bg-slate-800 flex items-center justify-center border-2 border-dashed border-slate-300 dark:border-white/10 hover:border-primary transition-all">
                                {% if product.image_url %}
                                <img src="{{ product.image_url }}" id="preview" class="w-full h-full object-cover">
                                {% else %}
                                <span class="material-symbols-outlined text-4xl text-slate-400 group-hover:text-primary transition-colors">add_a_photo</span>
                                <img id="preview" class="w-full h-full object-cover hidden">
                                {% endif %}
                                <input type="file" name="image" id="image-input" class="absolute inset-0 opacity-0 cursor-pointer" accept="image/*">
                            </div>
                            <p class="mt-4 text-xs text-slate-500">Haz clic para subir una imagen (JPG, PNG)</p>
                        </div>
                    </div>

                    <!-- Details -->
                    <div class="lg:col-span-2 space-y-6">
                        <div class="glass p-8 rounded-[2.5rem] border border-white/20 shadow-2xl">
                            <div class="space-y-6">
                                <div>
                                    <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2 px-1">Nombre del Postre</label>
                                    <input type="text" name="name" value="{{ product.name }}" required
                                        class="w-full px-4 py-3 rounded-2xl border-0 bg-background-light dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary outline-none shadow-sm"
                                        placeholder="Ej: Pastel de Chocolate Supremo">
                                </div>

                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div class="flex items-center gap-4 bg-emerald-50 dark:bg-emerald-500/5 p-4 rounded-2xl border border-emerald-100 dark:border-emerald-500/10">
                                        <label class="relative inline-flex items-center cursor-pointer">
                                            <input type="checkbox" name="is_specialty" class="sr-only peer" {{ product.is_specialty ? 'checked' : '' }}>
                                            <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none rounded-full peer dark:bg-slate-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-emerald-500"></div>
                                        </label>
                                        <div>
                                            <p class="text-[11px] font-black uppercase tracking-tighter text-emerald-600">Es Especialidad</p>
                                            <p class="text-[10px] text-slate-500">Aparecerá destacado en la home.</p>
                                        </div>
                                    </div>
                                    <div class="flex items-center gap-4 bg-amber-50 dark:bg-amber-500/5 p-4 rounded-2xl border border-amber-100 dark:border-amber-500/10">
                                        <label class="relative inline-flex items-center cursor-pointer">
                                            <input type="checkbox" name="is_special_of_week" class="sr-only peer" {{ product.is_special_of_week ? 'checked' : '' }}>
                                            <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none rounded-full peer dark:bg-slate-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-amber-500"></div>
                                        </label>
                                        <div>
                                            <p class="text-[11px] font-black uppercase tracking-tighter text-amber-600">Especial Semanal</p>
                                            <p class="text-[10px] text-slate-500">Se mostrará en el banner principal.</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="flex items-center gap-4 bg-slate-50 dark:bg-white/5 p-4 rounded-2xl border border-slate-100 dark:border-white/10">
                                    <label class="relative inline-flex items-center cursor-pointer">
                                        <input type="checkbox" name="is_active" class="sr-only peer" {{ product.is_active or not product ? 'checked' : '' }}>
                                        <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none rounded-full peer dark:bg-slate-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-primary"></div>
                                    </label>
                                    <div>
                                        <p class="text-sm font-bold">Mostrar en la página pública</p>
                                        <p class="text-[10px] text-slate-500">Si se desactiva, el producto no aparecerá en el menú del sitio web.</p>
                                    </div>
                                </div>

                                <div class="grid grid-cols-2 gap-6">
                                    <div>
                                        <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2 px-1">Precio ($)</label>
                                        <input type="number" name="price" value="{{ product.price }}" step="0.01" required
                                            class="w-full px-4 py-3 rounded-2xl border-0 bg-background-light dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary outline-none shadow-sm"
                                            placeholder="0.00">
                                    </div>
                                    <div>
                                        <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2 px-1">Stock Inicial</label>
                                        <input type="number" name="stock" value="{{ product.stock|default(0) }}" required
                                            class="w-full px-4 py-3 rounded-2xl border-0 bg-background-light dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary outline-none shadow-sm"
                                            placeholder="0">
                                    </div>
                                </div>

                                <div>
                                    <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2 px-1">Categoría</label>
                                    <select name="category_id" required
                                        class="w-full px-4 py-3 rounded-2xl border-0 bg-background-light dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary outline-none shadow-sm appearance-none">
                                        <option value="">Seleccionar categoría...</option>
                                        {% for category in categories %}
                                        <option value="{{ category.id }}" {{ product.category_id == category.id ? 'selected' : '' }}>{{ category.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>

                                <div>
                                    <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2 px-1">Descripción Corta</label>
                                    <textarea name="description" rows="3"
                                        class="w-full px-4 py-3 rounded-2xl border-0 bg-background-light dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary outline-none shadow-sm resize-none"
                                        placeholder="Descripción rápida para el catálogo...">{{ product.description }}</textarea>
                                </div>

                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <div>
                                        <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2 px-1">Ingredientes</label>
                                        <textarea name="ingredients" rows="4"
                                            class="w-full px-4 py-3 rounded-2xl border-0 bg-background-light dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary outline-none shadow-sm resize-none"
                                            placeholder="Harina, chocolate, amor...">{{ product.ingredients }}</textarea>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2 px-1">Características</label>
                                        <textarea name="characteristics" rows="4"
                                            class="w-full px-4 py-3 rounded-2xl border-0 bg-background-light dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary outline-none shadow-sm resize-none"
                                            placeholder="Sin gluten, Vegano, Extra dulce...">{{ product.characteristics }}</textarea>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="flex gap-4">
                            <button type="submit" class="flex-1 bg-primary text-white py-4 rounded-2xl font-bold flex items-center justify-center gap-2 shadow-lg shadow-primary/30 hover:scale-[1.02] transition-transform">
                                <span class="material-symbols-outlined">save</span> Guardar Postre
                            </button>
                            <a href="{{ base_url }}admin/inventory" class="flex-1 bg-slate-200 dark:bg-white/5 text-slate-600 dark:text-slate-400 py-4 rounded-2xl font-bold flex items-center justify-center hover:bg-slate-300 transition-all">
                                Cancelar
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>
</div>

<script>
    document.getElementById('image-input').onchange = evt => {
        const [file] = evt.target.files;
        if (file) {
            const preview = document.getElementById('preview');
            preview.src = URL.createObjectURL(file);
            preview.classList.remove('hidden');
        }
    }
</script>
{% endblock %}
