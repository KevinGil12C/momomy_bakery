{% extends "admin/layout.twig" %}

{% block body %}
<div class="flex h-screen overflow-hidden">
    <!-- Sidebar -->
    {% include 'admin/partials/sidebar.twig' with {'active': 'users'} %}

    <!-- Main Content -->
    <main class="flex-1 flex flex-col min-w-0 overflow-hidden">
        <!-- Header -->
        {% include 'admin/partials/header.twig' with {'breadcrumbs': [{label: 'Usuarios', url: 'admin/users'}]} %}

        <div class="flex-1 overflow-y-auto p-8 custom-scrollbar transition-all duration-300">
            <div class="flex items-center justify-between mb-8">
                <div>
                   <h2 class="text-3xl font-black text-slate-900 dark:text-white">Usuarios</h2>
                   <p class="text-slate-500 text-sm font-medium">Administra quienes tienen acceso al sistema</p>
                </div>
                <a href="{{ base_url }}admin/users/create" class="bg-primary text-white px-6 py-3 rounded-2xl font-bold text-sm flex items-center gap-2 shadow-lg shadow-primary/25 hover:scale-105 transition-all">
                    <span class="material-symbols-outlined text-lg">person_add</span> Nuevo Usuario
                </a>
            </div>

            <!-- Table List -->
            <div class="glass rounded-[2.5rem] border border-white/20 shadow-2xl overflow-hidden">
                <table class="w-full text-left">
                    <thead class="bg-slate-50 dark:bg-white/5 border-b border-slate-100 dark:border-white/10">
                        <tr>
                            <th class="px-6 py-4 text-xs font-black uppercase tracking-wider text-slate-500">Nombre</th>
                            <th class="px-6 py-4 text-xs font-black uppercase tracking-wider text-slate-500">Rol</th>
                            <th class="px-6 py-4 text-xs font-black uppercase tracking-wider text-slate-500">Fecha Registro</th>
                            <th class="px-6 py-4 text-xs font-black uppercase tracking-wider text-slate-500 text-right">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100 dark:divide-white/5">
                        {% for user in users %}
                        <tr class="hover:bg-slate-50 dark:hover:bg-white/5 transition-colors group">
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="size-10 rounded-xl bg-primary/10 flex items-center justify-center overflow-hidden border border-white/10 shadow-sm">
                                        {% if user.avatar_url %}
                                            <img src="{{ user.avatar_url }}" class="size-full object-cover">
                                        {% else %}
                                            <span class="text-xs font-black text-primary">{{ user.first_name|first|upper }}</span>
                                        {% endif %}
                                    </div>
                                    <div>
                                        <p class="font-bold text-slate-900 dark:text-white">{{ user.first_name }} {{ user.last_name }}</p>
                                        <p class="text-xs text-slate-500">{{ user.email }}</p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="px-3 py-1 bg-primary/20 text-primary text-[10px] font-black uppercase rounded-full">
                                    {{ user.role_name }}
                                </span>
                            </td>
                            <td class="px-6 py-4">
                                <p class="text-sm">{{ user.created_at|date("d/m/Y") }}</p>
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex justify-end gap-2">
                                    <button class="size-10 rounded-xl bg-slate-100 dark:bg-white/5 text-slate-400 flex items-center justify-center hover:bg-slate-200 dark:hover:bg-white/10 transition-all">
                                        <span class="material-symbols-outlined text-xl">edit</span>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>
{% endblock %}
