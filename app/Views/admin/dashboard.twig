{% extends "admin/layout.twig" %}

{% block body %}
<div class="flex h-screen overflow-hidden">
    <!-- Sidebar -->
    {% include 'admin/partials/sidebar.twig' with {'active': 'dashboard'} %}

    <!-- Main Content -->
    <main class="flex-1 flex flex-col min-w-0 overflow-hidden">
        <!-- Header -->
        {% include 'admin/partials/header.twig' with {'breadcrumbs': []} %}

        <!-- Content Area -->
        <div class="flex-1 overflow-y-auto p-8 custom-scrollbar transition-all duration-300">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <!-- Stat Cards -->
                <div class="glass p-6 rounded-[2rem] border border-white/20 shadow-xl">
                    <div class="size-12 rounded-2xl bg-blue-500/10 text-blue-500 flex items-center justify-center mb-4">
                        <span class="material-symbols-outlined">inventory_2</span>
                    </div>
                    <p class="text-slate-500 text-xs font-bold uppercase tracking-wider">Productos</p>
                    <h3 class="text-3xl font-black mt-1">{{ stats.total_products }}</h3>
                </div>
                <div class="glass p-6 rounded-[2rem] border border-white/20 shadow-xl">
                    <div class="size-12 rounded-2xl bg-green-500/10 text-green-500 flex items-center justify-center mb-4">
                        <span class="material-symbols-outlined">shopping_cart</span>
                    </div>
                    <p class="text-slate-500 text-xs font-bold uppercase tracking-wider">Pedidos</p>
                    <h3 class="text-3xl font-black mt-1">{{ stats.total_orders }}</h3>
                </div>
                <div class="glass p-6 rounded-[2rem] border border-white/20 shadow-xl">
                    <div class="size-12 rounded-2xl bg-orange-500/10 text-orange-500 flex items-center justify-center mb-4">
                        <span class="material-symbols-outlined">pending_actions</span>
                    </div>
                    <p class="text-slate-500 text-xs font-bold uppercase tracking-wider">Pendientes</p>
                    <h3 class="text-3xl font-black mt-1">{{ stats.pending_orders }}</h3>
                </div>
                <div class="glass p-6 rounded-[2rem] border border-white/20 shadow-xl">
                    <div class="size-12 rounded-2xl bg-primary/10 text-primary flex items-center justify-center mb-4">
                        <span class="material-symbols-outlined">chat_bubble</span>
                    </div>
                    <p class="text-slate-500 text-xs font-bold uppercase tracking-wider">Mensajes</p>
                    <h3 class="text-3xl font-black mt-1">{{ stats.unread_messages }}</h3>
                </div>
            </div>

            <!-- Main Panel -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <div class="lg:col-span-2 glass rounded-[2.5rem] border border-white/20 shadow-2xl p-8">
                    <div class="flex items-center justify-between mb-8">
                        <h4 class="text-xl font-bold">Resumen de Actividad</h4>
                        <button class="text-primary font-bold text-sm">Ver todo</button>
                    </div>
                    <div class="space-y-6">
                        {% for order in recent_orders %}
                        <div class="flex items-center gap-6 p-4 rounded-3xl hover:bg-slate-50 dark:hover:bg-white/5 transition-colors cursor-pointer group" onclick="window.location='{{ base_url }}admin/orders'">
                             <div class="size-12 rounded-2xl bg-primary/10 text-primary group-hover:scale-110 transition-transform flex items-center justify-center"><span class="material-symbols-outlined">shopping_basket</span></div>
                             <div class="flex-grow">
                                 <p class="font-bold">Nuevo pedido #{{ "%04d"|format(order.id) }}</p>
                                 <p class="text-sm text-slate-500">{{ order.created_at|date("d M, H:i") }} &bull; ${{ order.total_amount }}</p>
                             </div>
                             <span class="px-3 py-1 {% if order.status == 'pending' %}bg-orange-500/10 text-orange-500{% else %}bg-green-500/10 text-green-500{% endif %} text-[10px] font-bold uppercase rounded-full">
                                {{ order.status }}
                             </span>
                        </div>
                        {% else %}
                        <p class="text-center text-slate-500 py-10">No hay pedidos recientes.</p>
                        {% endfor %}
                    </div>
                </div>

                <div class="lg:col-span-1 flex flex-col gap-6">
                    <div class="glass rounded-[2.5rem] border border-white/20 shadow-2xl p-8">
                        <h4 class="text-lg font-bold mb-6">Mensajes Recientes</h4>
                        <div class="space-y-4">
                            {% for contact in unread_messages_list %}
                            <div class="p-4 rounded-2xl bg-slate-50 dark:bg-white/5 border border-slate-100 dark:border-white/5">
                                <p class="font-bold text-sm">{{ contact.name }}</p>
                                <p class="text-xs text-slate-500 truncate">{{ contact.message }}</p>
                            </div>
                            {% else %}
                            <p class="text-xs text-slate-500">Sin mensajes nuevos.</p>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="glass rounded-[2rem] bg-slate-900 text-white p-8 relative overflow-hidden shadow-2xl">
                        <div class="absolute -top-12 -right-12 size-40 bg-primary/20 rounded-full blur-3xl"></div>
                        <h4 class="text-lg font-bold mb-2">Momomy Pro Tips</h4>
                        <p class="text-sm text-slate-400 mb-6">¿Sabías que puedes enviar cotizaciones PDF directamente desde aquí?</p>
                        <button class="bg-primary px-6 py-3 rounded-2xl font-bold text-sm hover:scale-105 transition-transform">Probar ahora</button>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
