{% extends "admin/layout.twig" %}

{% block body %}
<div class="flex h-screen overflow-hidden">
    <!-- Sidebar -->
    <aside class="hidden lg:flex flex-col w-72 h-full glass border-r border-white/10 p-6 z-20">
        <div class="flex items-center gap-4 mb-12 px-2">
            <div class="size-10 rounded-xl bg-primary text-white flex items-center justify-center shadow-lg shadow-primary/30">
                <span class="material-symbols-outlined">bakery_dining</span>
            </div>
            <span class="text-xl font-black text-slate-900 dark:text-white">Momomy</span>
        </div>

        <nav class="flex-grow space-y-2">
            <a href="{{ base_url }}admin/dashboard" class="flex items-center gap-4 px-4 py-3 pb-4 rounded-2xl bg-primary text-white font-bold shadow-lg shadow-primary/20">
                <span class="material-symbols-outlined">dashboard</span> Dashboard
            </a>
            <a href="{{ base_url }}admin/inventory" class="flex items-center gap-4 px-4 py-3 rounded-2xl text-slate-600 dark:text-slate-400 hover:bg-primary/10 hover:text-primary transition-all">
                <span class="material-symbols-outlined">inventory_2</span> Inventario
            </a>
            <a href="{{ base_url }}admin/orders" class="flex items-center gap-4 px-4 py-3 rounded-2xl text-slate-600 dark:text-slate-400 hover:bg-primary/10 hover:text-primary transition-all">
                <span class="material-symbols-outlined">shopping_cart</span> Pedidos
            </a>
            <a href="{{ base_url }}admin/quotations" class="flex items-center gap-4 px-4 py-3 rounded-2xl text-slate-600 dark:text-slate-400 hover:bg-primary/10 hover:text-primary transition-all">
                <span class="material-symbols-outlined">description</span> Cotizaciones
            </a>
        </nav>

        <div class="mt-auto p-4 bg-slate-100 dark:bg-slate-800/50 rounded-3xl flex items-center gap-4">
            <div class="size-10 rounded-full bg-primary/20 text-primary flex items-center justify-center font-bold">M</div>
            <div class="flex-grow">
                <p class="text-xs font-bold text-slate-900 dark:text-white">{{ session.user_name }}</p>
                <p class="text-[10px] text-slate-500">Administradora</p>
            </div>
            <a href="{{ base_url }}logout" class="material-symbols-outlined text-slate-400 hover:text-red-500 transition-colors">logout</a>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 flex flex-col min-w-0 overflow-hidden">
        <!-- Header -->
        <header class="h-20 flex items-center justify-between px-8 bg-white/50 dark:bg-background-dark/50 backdrop-blur-md border-b border-white/10">
            <h2 class="text-xl font-bold">{{ title }}</h2>
            <div class="flex items-center gap-4">
                <button class="p-2 rounded-full hover:bg-slate-200 dark:hover:bg-slate-800 text-slate-500"><span class="material-symbols-outlined">notifications</span></button>
                <div class="h-8 w-px bg-slate-200 dark:bg-white/10 mx-2"></div>
                <div class="flex items-center gap-3">
                    <span class="text-sm font-bold hidden md:block">¡Hola de nuevo!</span>
                    <div class="size-10 rounded-full bg-slate-200 dark:bg-slate-800"></div>
                </div>
            </div>
        </header>

        <!-- Content Area -->
        <div class="flex-1 overflow-y-auto p-8 custom-scrollbar">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <!-- Stat Cards -->
                <div class="glass p-6 rounded-[2rem] border border-white/20 shadow-xl">
                    <div class="size-12 rounded-2xl bg-blue-500/10 text-blue-500 flex items-center justify-center mb-4">
                        <span class="material-symbols-outlined">inventory_2</span>
                    </div>
                    <p class="text-slate-500 text-xs font-bold uppercase tracking-wider">Productos</p>
                    <h3 class="text-3xl font-black mt-1">{{ stats.total_products }}</h3>
                </div>
                <div class="glass p-6 rounded-[2rem] border border-white/20 shadow-xl">
                    <div class="size-12 rounded-2xl bg-green-500/10 text-green-500 flex items-center justify-center mb-4">
                        <span class="material-symbols-outlined">shopping_cart</span>
                    </div>
                    <p class="text-slate-500 text-xs font-bold uppercase tracking-wider">Pedidos</p>
                    <h3 class="text-3xl font-black mt-1">{{ stats.total_orders }}</h3>
                </div>
                <div class="glass p-6 rounded-[2rem] border border-white/20 shadow-xl">
                    <div class="size-12 rounded-2xl bg-orange-500/10 text-orange-500 flex items-center justify-center mb-4">
                        <span class="material-symbols-outlined">pending_actions</span>
                    </div>
                    <p class="text-slate-500 text-xs font-bold uppercase tracking-wider">Pendientes</p>
                    <h3 class="text-3xl font-black mt-1">{{ stats.pending_orders }}</h3>
                </div>
                <div class="glass p-6 rounded-[2rem] border border-white/20 shadow-xl">
                    <div class="size-12 rounded-2xl bg-primary/10 text-primary flex items-center justify-center mb-4">
                        <span class="material-symbols-outlined">chat_bubble</span>
                    </div>
                    <p class="text-slate-500 text-xs font-bold uppercase tracking-wider">Mensajes</p>
                    <h3 class="text-3xl font-black mt-1">{{ stats.unread_messages }}</h3>
                </div>
            </div>

            <!-- Main Panel -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <div class="lg:col-span-2 glass rounded-[2.5rem] border border-white/20 shadow-2xl p-8">
                    <div class="flex items-center justify-between mb-8">
                        <h4 class="text-xl font-bold">Resumen de Actividad</h4>
                        <button class="text-primary font-bold text-sm">Ver todo</button>
                    </div>
                    <div class="space-y-6">
                        <div class="flex items-center gap-6 p-4 rounded-3xl hover:bg-slate-50 dark:hover:bg-white/5 transition-colors cursor-pointer group">
                             <div class="size-12 rounded-2xl bg-primary/10 text-primary group-hover:scale-110 transition-transform flex items-center justify-center"><span class="material-symbols-outlined">shopping_basket</span></div>
                             <div class="flex-grow">
                                 <p class="font-bold">Nuevo pedido #1034</p>
                                 <p class="text-sm text-slate-500">Hace 5 minutos &bull; $45.00</p>
                             </div>
                             <span class="px-3 py-1 bg-green-500/10 text-green-500 text-[10px] font-bold uppercase rounded-full">Recibido</span>
                        </div>
                        <!-- More items... -->
                    </div>
                </div>

                <div class="lg:col-span-1 flex flex-col gap-6">
                    <div class="glass rounded-[2rem] bg-slate-900 text-white p-8 relative overflow-hidden shadow-2xl">
                        <div class="absolute -top-12 -right-12 size-40 bg-primary/20 rounded-full blur-3xl"></div>
                        <h4 class="text-lg font-bold mb-2">Momomy Pro Tips</h4>
                        <p class="text-sm text-slate-400 mb-6">¿Sabías que puedes enviar cotizaciones PDF directamente desde aquí?</p>
                        <button class="bg-primary px-6 py-3 rounded-2xl font-bold text-sm hover:scale-105 transition-transform">Probar ahora</button>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
