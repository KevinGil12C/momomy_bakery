{% extends "admin/layout.twig" %}

{% block body %}
<div class="flex h-screen overflow-hidden">
    <!-- Sidebar -->
    {% include 'admin/partials/sidebar.twig' with {'active': 'customers'} %}

    <main class="flex-1 flex flex-col min-w-0 overflow-hidden">
        <!-- Header -->
        {% include 'admin/partials/header.twig' with {'breadcrumbs': [
            {label: 'Catálogo de Clientes', url: '#'}
        ]} %}

        <div class="flex-1 overflow-y-auto p-4 lg:p-8 custom-scrollbar relative">
            
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-8">
                <div>
                    <h2 class="text-3xl font-black text-slate-900 dark:text-white flex items-center gap-3">
                        <span class="material-symbols-outlined text-4xl text-primary">groups</span>
                        Catálogo de Clientes
                    </h2>
                    <p class="text-slate-500 text-sm font-medium mt-1">Nuestra comunidad oficial de fans</p>
                </div>
            </div>

            <!-- Customers Table -->
            <div class="glass rounded-[2.5rem] border border-white/20 shadow-2xl overflow-hidden relative">
                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse">
                        <thead>
                            <tr class="bg-slate-50/50 dark:bg-slate-800/50 border-b border-slate-100 dark:border-slate-800">
                                <th class="p-6 text-xs font-black tracking-widest uppercase text-slate-400">ID</th>
                                <th class="p-6 text-xs font-black tracking-widest uppercase text-slate-400">Cliente</th>
                                <th class="p-6 text-xs font-black tracking-widest uppercase text-slate-400">Correo Electrónico</th>
                                <th class="p-6 text-xs font-black tracking-widest uppercase text-slate-400">Teléfono</th>
                                <th class="p-6 text-xs font-black tracking-widest uppercase text-slate-400">Fecha de Registro</th>
                                <th class="p-6 text-xs font-black tracking-widest uppercase text-slate-400 text-right">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-100 dark:divide-slate-800/50">
                            {% for customer in customers %}
                                <tr class="group hover:bg-slate-50/50 dark:hover:bg-slate-800/20 transition-colors">
                                    <td class="p-6 font-bold text-slate-500">
                                        #{{ customer.id }}
                                    </td>
                                    <td class="p-6">
                                        <div class="flex items-center gap-4">
                                            <div class="size-10 rounded-full bg-primary/10 text-primary flex items-center justify-center font-bold shadow-inner">
                                                {{ customer.first_name|first|upper }}
                                            </div>
                                            <div>
                                                <div class="font-bold text-slate-900 dark:text-white group-hover:text-primary transition-colors">
                                                    {{ customer.first_name }} {{ customer.last_name }}
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="p-6">
                                        <a href="mailto:{{ customer.email }}" class="inline-flex items-center gap-2 text-sm text-slate-600 dark:text-slate-400 hover:text-primary transition-colors">
                                            <span class="material-symbols-outlined text-sm">mail</span>
                                            {{ customer.email }}
                                        </a>
                                    </td>
                                    <td class="p-6">
                                        {% if customer.phone %}
                                        <a href="tel:{{ customer.phone }}" class="inline-flex items-center gap-2 text-sm text-slate-600 dark:text-slate-400 hover:text-primary transition-colors">
                                            <span class="material-symbols-outlined text-sm">call</span>
                                            {{ customer.phone }}
                                        </a>
                                        {% else %}
                                        <span class="text-xs text-slate-400 italic">No registrado</span>
                                        {% endif %}
                                    </td>
                                    <td class="p-6">
                                        <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-slate-100 dark:bg-slate-800 text-slate-500 dark:text-slate-400 text-xs font-bold font-mono">
                                            {{ customer.created_at|date('d/m/Y') }}
                                        </span>
                                    </td>
                                    <td class="p-6">
                                        <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                            <a href="{{ base_url }}admin/customers/edit/{{ customer.id }}" class="size-10 rounded-[1rem] bg-amber-50 text-amber-500 hover:bg-amber-500 hover:text-white flex items-center justify-center transition-all shadow-sm hover:shadow-lg hover:shadow-amber-500/30 hover:-translate-y-0.5" title="Editar Cliente">
                                                <span class="material-symbols-outlined text-[1.2rem]">edit</span>
                                            </a>
                                            <a href="javascript:void(0)" onclick="confirmDelete('{{ base_url }}admin/customers/delete/{{ customer.id }}')" class="size-10 rounded-[1rem] bg-rose-50 text-rose-500 hover:bg-rose-500 hover:text-white flex items-center justify-center transition-all shadow-sm hover:shadow-lg hover:shadow-rose-500/30 hover:-translate-y-0.5" title="Eliminar Cliente">
                                                <span class="material-symbols-outlined text-[1.2rem]">delete</span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="p-16 text-center text-slate-500">
                                        <div class="flex flex-col items-center gap-4">
                                            <div class="size-24 rounded-full bg-slate-100 dark:bg-slate-800 flex items-center justify-center text-slate-400 border-4 border-white dark:border-slate-900 shadow-xl">
                                                <span class="material-symbols-outlined text-4xl">inventory_2</span>     
                                            </div>
                                            <p class="font-medium text-lg">No hay clientes registrados aún.</p>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </main>
</div>
{% endblock %}
