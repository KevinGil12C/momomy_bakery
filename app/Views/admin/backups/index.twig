{% extends "admin/layout.twig" %}

{% block body %}
<div class="flex h-screen overflow-hidden">
    <!-- Sidebar -->
    {% include 'admin/partials/sidebar.twig' with {'active': 'backups'} %}

    <main class="flex-1 flex flex-col min-w-0 overflow-hidden">
        <!-- Header -->
        {% include 'admin/partials/header.twig' with {'breadcrumbs': [{label: 'Respaldos', url: 'admin/backups'}]} %}

        <div class="flex-1 overflow-y-auto p-8 custom-scrollbar">
            <div class="flex items-center justify-between mb-8">
                <div>
                    <h2 class="text-3xl font-black text-slate-900 dark:text-white">Respaldos de Base de Datos</h2>
                    <p class="text-slate-500 text-sm font-medium">Gestiona copias de seguridad de toda tu información</p>
                </div>
                <form action="{{ base_url }}admin/backups/generate" method="POST">
                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                    <button type="submit" class="bg-primary text-white px-6 py-3 rounded-2xl font-bold text-sm flex items-center gap-2 shadow-lg shadow-primary/25 hover:scale-105 transition-all">
                        <span class="material-symbols-outlined text-lg">database</span> Generar Nuevo Respaldo
                    </button>
                </form>
            </div>

            <!-- Backups Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
                {% for file in files %}
                <div class="glass border border-white/20 dark:border-white/5 rounded-[2.5rem] p-6 shadow-xl transition-all hover:-translate-y-1">
                    <div class="flex items-start justify-between mb-6">
                        <div class="size-14 rounded-2xl bg-primary/10 text-primary flex items-center justify-center">
                            <span class="material-symbols-outlined text-3xl">storage</span>
                        </div>
                        <div class="text-right">
                            <p class="text-[10px] font-black uppercase text-slate-400 tracking-widest">Tamaño</p>
                            <p class="text-sm font-bold text-slate-900 dark:text-white">{{ file.size }}</p>
                        </div>
                    </div>
                    
                    <div class="mb-6">
                        <h3 class="font-bold text-slate-900 dark:text-white truncate text-sm mb-1" title="{{ file.name }}">{{ file.name }}</h3>
                        <p class="text-xs text-slate-500 font-medium flex items-center gap-1">
                            <span class="material-symbols-outlined text-xs">calendar_today</span> {{ file.date }}
                        </p>
                    </div>

                    <div class="grid grid-cols-2 gap-3 pt-4 border-t border-slate-100 dark:border-white/5">
                        <a href="{{ base_url }}admin/backups/download/{{ file.name }}" 
                           class="flex items-center justify-center gap-2 py-2.5 rounded-xl bg-slate-900 text-white text-xs font-bold hover:bg-black transition-all">
                            <span class="material-symbols-outlined text-sm">download</span> Descargar
                        </a>
                        <a href="{{ base_url }}admin/backups/delete/{{ file.name }}" 
                           onclick="return confirm('¿Eliminar este archivo de respaldo permanentemente?')"
                           class="flex items-center justify-center gap-2 py-2.5 rounded-xl border border-red-500/20 text-red-500 text-xs font-bold hover:bg-red-500 hover:text-white transition-all">
                            <span class="material-symbols-outlined text-sm">delete</span> Borrar
                        </a>
                    </div>
                </div>
                {% else %}
                <div class="col-span-full py-20 text-center">
                    <div class="inline-flex size-20 items-center justify-center rounded-full bg-slate-100 dark:bg-slate-800 text-slate-400 mb-4">
                        <span class="material-symbols-outlined text-4xl">inventory_2</span>
                    </div>
                    <h3 class="text-xl font-bold">No hay respaldos generados</h3>
                    <p class="text-slate-500">Presiona el botón superior para crear tu primera copia de seguridad.</p>
                </div>
                {% endfor %}
            </div>

            <!-- Safe Alert -->
            <div class="mt-8 p-6 rounded-[2rem] bg-orange-500/10 border border-orange-500/20 flex items-start gap-4">
                <span class="material-symbols-outlined text-orange-500">warning</span>
                <div>
                    <h4 class="text-sm font-bold text-orange-600 dark:text-orange-400 mb-1">Nota de Seguridad</h4>
                    <p class="text-xs text-orange-600/80 dark:text-orange-400/60 leading-relaxed font-medium">
                        Los respaldos se almacenan localmente en la carpeta del servidor. Te recomendamos descargar una copia externa periódicamente para garantizar la máxima seguridad de tus datos ante cualquier fallo de hardware.
                    </p>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
