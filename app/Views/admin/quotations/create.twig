{% extends "admin/layout.twig" %}

{% block body %}
<div class="flex h-screen overflow-hidden">
    <!-- Sidebar -->
    {% include 'admin/partials/sidebar.twig' with {'active': 'quotations'} %}

    <main class="flex-1 flex flex-col min-w-0 overflow-hidden">
        <!-- Header -->
        {% include 'admin/partials/header.twig' with {'breadcrumbs': [
            {label: 'Cotizaciones', url: 'admin/quotations'},
            {label: 'Nueva', url: '#'}
        ]} %}

        <div class="flex-1 overflow-y-auto p-8 custom-scrollbar">
            <div class="mb-8">
                <h2 class="text-3xl font-black text-slate-900 dark:text-white">Nueva Cotización</h2>
                <p class="text-slate-500 text-sm font-medium">Genera un presupuesto profesional para tu cliente</p>
            </div>
            <form action="{{ base_url }}admin/quotations/store" method="POST" class="max-w-4xl mx-auto space-y-8">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                <input type="hidden" name="id" value="{{ quotation.id }}">

                <div class="glass p-8 rounded-[2.5rem] border border-white/20 shadow-2xl">
                    <h3 class="text-lg font-bold mb-6 flex items-center gap-2">
                        <span class="material-symbols-outlined text-primary">person</span> Datos del Cliente
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div>
                            <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2 px-1">Nombre(s)</label>
                            <input type="text" name="customer_first_name" required value="{{ quotation.customer_first_name }}"
                                class="w-full px-4 py-3 rounded-2xl border-0 bg-background-light dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary outline-none shadow-sm"
                                placeholder="Ej: Maria">
                        </div>
                        <div>
                            <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2 px-1">Apellido(s)</label>
                            <input type="text" name="customer_last_name" required value="{{ quotation.customer_last_name }}"
                                class="w-full px-4 py-3 rounded-2xl border-0 bg-background-light dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary outline-none shadow-sm"
                                placeholder="Ej: Lopez">
                        </div>
                        <div>
                            <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2 px-1">Correo Electrónico</label>
                            <input type="email" name="customer_email" required value="{{ quotation.customer_email }}"
                                class="w-full px-4 py-3 rounded-2xl border-0 bg-background-light dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary outline-none shadow-sm"
                                placeholder="ejemplo@correo.com">
                        </div>
                    </div>
                </div>

                <div class="glass p-8 rounded-[2.5rem] border border-white/20 shadow-2xl">
                    <h3 class="text-lg font-bold mb-6 flex items-center gap-2">
                        <span class="material-symbols-outlined text-primary">description</span> Detalles del Presupuesto
                    </h3>
                    <div class="space-y-6">
                        <div>
                            <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2 px-1">Asunto / Título</label>
                            <input type="text" name="subject" required value="{{ quotation.subject }}"
                                class="w-full px-4 py-3 rounded-2xl border-0 bg-background-light dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary outline-none shadow-sm"
                                placeholder="Ej: Cotización para Evento - Pastel de 3 pisos">
                        </div>
                        <div>
                            <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2 px-1">Contenido / Descripción de Productos</label>
                            <textarea name="content" rows="6" required
                                class="w-full px-4 py-3 rounded-2xl border-0 bg-background-light dark:bg-slate-800/50 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary outline-none shadow-sm resize-none mb-4"
                                placeholder="Describe el pedido, cantidades y precios...">{{ quotation.content }}</textarea>
                            
                            <label class="flex items-center gap-3 cursor-pointer group p-4 rounded-2xl bg-slate-50 dark:bg-white/5 border border-slate-100 dark:border-white/10 hover:border-primary/30 transition-all">
                                <div class="relative">
                                    <input type="checkbox" name="attach_pdf" value="1" checked class="sr-only peer">
                                    <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none rounded-full peer dark:bg-slate-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-primary"></div>
                                </div>
                                <span class="text-sm font-bold text-slate-700 dark:text-slate-300 group-hover:text-primary transition-colors flex items-center gap-2">
                                    <span class="material-symbols-outlined text-lg">picture_as_pdf</span>
                                    Adjuntar este presupuesto como PDF al correo
                                </span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="flex items-center justify-between p-4 bg-primary/5 rounded-3xl border border-primary/10">
                    <div class="flex items-center gap-3">
                        <span class="material-symbols-outlined text-primary">info</span>
                        <p class="text-sm text-slate-600 dark:text-slate-400">Al guardar, se generará un PDF profesional y se enviará por correo al cliente automáticamente.</p>
                    </div>
                    <button type="submit" class="bg-primary text-white px-8 py-4 rounded-2xl font-bold flex items-center gap-2 shadow-lg shadow-primary/30 hover:scale-105 transition-transform">
                        <span class="material-symbols-outlined">send</span> Generar y Enviar
                    </button>
                </div>
            </form>
        </div>
    </main>
</div>
{% endblock %}
