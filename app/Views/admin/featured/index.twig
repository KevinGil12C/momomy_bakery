{% extends "admin/layout.twig" %}

{% block body %}
<div class="flex h-screen overflow-hidden text-slate-900 dark:text-white">
    <!-- Sidebar -->
    {% include 'admin/partials/sidebar.twig' with {'active': 'featured'} %}

    <main class="flex-1 flex flex-col min-w-0 overflow-hidden">
        <!-- Header -->
        {% include 'admin/partials/header.twig' with {'breadcrumbs': [{label: 'Destacados', url: '#'}]} %}

        <div class="flex-1 overflow-y-auto p-8 custom-scrollbar">
            <div class="mb-12">
                <h2 class="text-4xl font-black tracking-tighter italic">Centro de Control de Portada</h2>
                <p class="text-slate-500 font-medium italic">Configura la vitrina principal de Momomy Bakery üßÅ‚ú®</p>
            </div>

            <div class="grid grid-cols-1 xl:grid-cols-3 gap-12">
                <!-- Special of the Week Section -->
                <div class="xl:col-span-1 space-y-6">
                    <div class="flex items-center gap-3 mb-2">
                        <span class="size-10 rounded-full bg-amber-500/10 text-amber-500 flex items-center justify-center">
                            <span class="material-symbols-outlined">stars</span>
                        </span>
                        <h3 class="text-xl font-black italic">Especial de la Semana</h3>
                    </div>
                    
                    {% if special_of_week %}
                    <div class="glass p-8 rounded-[3rem] border-2 border-amber-500/20 shadow-2xl relative group overflow-hidden">
                        <div class="absolute inset-0 bg-amber-500/5 opacity-0 group-hover:opacity-100 transition-opacity"></div>
                        <div class="aspect-video rounded-[2rem] overflow-hidden mb-6 shadow-inner">
                            <img src="{{ special_of_week.image_url }}" class="size-full object-cover">
                        </div>
                        <h4 class="text-2xl font-black mb-2">{{ special_of_week.name }}</h4>
                        <p class="text-xs font-bold text-amber-600 uppercase mb-6 flex items-center gap-2">
                             Actual banner de portada
                        </p>
                        <button onclick="openSelector('is_special_of_week')" class="w-full py-4 bg-slate-900 dark:bg-slate-800 text-white rounded-2xl font-black text-xs uppercase tracking-widest hover:bg-amber-500 transition-all flex items-center justify-center gap-2">
                            <span class="material-symbols-outlined text-sm">swap_horiz</span> CAMBIAR ESPECIAL
                        </button>
                    </div>
                    {% else %}
                    <div class="p-12 text-center glass rounded-[3rem] border-2 border-dashed border-slate-200 dark:border-white/5">
                        <p class="text-slate-400 font-bold italic mb-6">No hay especial de la semana activo</p>
                        <button onclick="openSelector('is_special_of_week')" class="px-8 py-4 bg-primary text-white rounded-2xl font-black text-xs uppercase">Elegir uno</button>
                    </div>
                    {% endif %}
                </div>

                <!-- Home Specialties Section -->
                <div class="xl:col-span-2 space-y-6">
                    <div class="flex items-center justify-between gap-3 mb-2">
                        <div class="flex items-center gap-3">
                            <span class="size-10 rounded-full bg-emerald-500/10 text-emerald-500 flex items-center justify-center">
                                <span class="material-symbols-outlined">favorite</span>
                            </span>
                            <h3 class="text-xl font-black italic">Especialidades Recomendadas</h3>
                            <span class="text-[10px] font-black bg-slate-100 dark:bg-white/5 px-3 py-1 rounded-full text-slate-400">
                                {{ specialties|length }} / 4 SLOTS
                            </span>
                        </div>
                        {% if specialties|length < 4 %}
                        <button onclick="openSelector('is_specialty')" class="text-xs font-black text-primary flex items-center gap-2 hover:scale-110 transition-transform uppercase tracking-widest">
                            <span class="material-symbols-outlined">add_circle</span> A√ëADIR NUEVA
                        </button>
                        {% endif %}
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        {% for item in specialties %}
                        <div class="glass p-6 rounded-[2.5rem] border border-white/20 shadow-xl flex gap-6 group hover:border-emerald-500/30 transition-all">
                            <div class="size-24 rounded-[1.5rem] overflow-hidden flex-shrink-0 shadow-inner">
                                <img src="{{ item.image_url }}" class="size-full object-cover">
                            </div>
                            <div class="flex-1 flex flex-col justify-between">
                                <div>
                                    <h4 class="font-black text-lg italic truncate pr-8">{{ item.name }}</h4>
                                    <p class="text-[10px] text-slate-400 font-bold uppercase">{{ item.category }}</p>
                                </div>
                                <button onclick="toggleFeatured({{ item.id }}, 'is_specialty', 0)" class="text-[10px] font-black text-red-500 flex items-center gap-1 hover:underline uppercase tracking-tighter">
                                    <span class="material-symbols-outlined text-sm">do_not_disturb_on</span> Quitar de home
                                </button>
                            </div>
                        </div>
                        {% else %}
                        <div class="col-span-full p-20 text-center glass rounded-[3rem] border-2 border-dashed border-slate-200 dark:border-white/5">
                            <p class="text-slate-400 font-bold italic">Tu home est√° vac√≠a. Selecciona hasta 4 productos destacados.</p>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<!-- Selector Modal (Hidden) -->
<div id="selector-modal" class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-slate-900/80 backdrop-blur-sm hidden">
    <div class="w-full max-w-2xl bg-white dark:bg-slate-900 rounded-[3rem] shadow-2xl flex flex-col max-h-[80vh] overflow-hidden">
        <div class="p-8 border-b border-slate-100 dark:border-white/5 flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-black italic" id="modal-title">Elegir Producto</h3>
                <p class="text-sm text-slate-500 font-medium" id="modal-subtitle">Selecciona un producto de tu inventario activo</p>
            </div>
            <button onclick="closeSelector()" class="size-12 rounded-2xl hover:bg-slate-100 dark:hover:bg-white/10 flex items-center justify-center">
                <span class="material-symbols-outlined">close</span>
            </button>
        </div>
        
        <div class="p-4 bg-slate-50 dark:bg-white/5">
            <input type="text" id="product-search" oninput="filterModalItems()" placeholder="Buscar producto..." class="w-full px-6 py-4 rounded-2xl border-none outline-none bg-white dark:bg-slate-800 shadow-sm focus:ring-2 focus:ring-primary font-bold">
        </div>

        <div class="flex-1 overflow-y-auto p-4 space-y-2 custom-scrollbar" id="modal-items-container">
            {% for p in all_products %}
            <button onclick="handleSelection({{ p.id }}, this)" 
                    class="modal-item w-full flex items-center gap-4 p-4 rounded-2xl hover:bg-primary/10 group transition-all"
                    data-name="{{ p.name|lower }}">
                <div class="size-16 rounded-xl overflow-hidden shadow-sm flex-shrink-0">
                    <img src="{{ p.image_url ? p.image_url : (base_url ~ 'public/uploads/products/placeholder.png') }}" class="size-full object-cover">
                </div>
                <div class="text-left flex-1">
                    <h4 class="font-black group-hover:text-primary transition-colors italic">{{ p.name }}</h4>
                    <p class="text-xs text-slate-500 font-bold uppercase tracking-widest">{{ p.category }} ‚Ä¢ ${{ p.price }}</p>
                </div>
                <span class="material-symbols-outlined text-primary opacity-0 group-hover:opacity-100 transition-opacity">check_circle</span>
            </button>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
let activeType = '';

function openSelector(type) {
    activeType = type;
    const modal = document.getElementById('selector-modal');
    const title = document.getElementById('modal-title');
    const subtitle = document.getElementById('modal-subtitle');
    
    if (type === 'is_special_of_week') {
        title.innerText = 'Cambiar Especial Semanal';
        subtitle.innerText = 'El producto seleccionado aparecer√° en el banner principal.';
    } else {
        title.innerText = 'A√±adir Especialidad';
        subtitle.innerText = 'El producto ser√° a√±adido a la cuadr√≠cula de la Home.';
    }
    
    modal.classList.remove('hidden');
    document.getElementById('product-search').focus();
}

function closeSelector() {
    document.getElementById('selector-modal').classList.add('hidden');
}

function filterModalItems() {
    const query = document.getElementById('product-search').value.toLowerCase();
    document.querySelectorAll('.modal-item').forEach(item => {
        const name = item.dataset.name;
        item.style.display = name.includes(query) ? 'flex' : 'none';
    });
}

function handleSelection(id, element) {
    // Basic validation for Specialties limit
    const currentSpecialtiesCount = {{ specialties|length }};
    if (activeType === 'is_specialty' && currentSpecialtiesCount >= 4) {
        Swal.fire({
            icon: 'warning',
            title: 'L√≠mite alcanzado',
            text: 'Solo puedes tener 4 especialidades en la Home. Quita una para a√±adir esta.',
            confirmButtonColor: '#f0427c'
        });
        return;
    }

    // Visual feedback: Illuminate the selected item
    element.classList.add('bg-emerald-500/20', 'ring-2', 'ring-emerald-500');
    const icon = element.querySelector('.material-symbols-outlined');
    if (icon) {
        icon.innerText = 'sync';
        icon.classList.add('animate-spin', 'opacity-100');
    }

    toggleFeatured(id, activeType, 1);
}

async function toggleFeatured(id, type, value) {
    try {
        const formData = new FormData();
        formData.append('id', id);
        formData.append('type', type);
        formData.append('value', value);
        formData.append('csrf_token', '{{ csrf_token }}');

        const resp = await fetch('{{ base_url }}admin/featured/update', {
            method: 'POST',
            body: formData,
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        });

        if (!resp.ok) {
            const errorText = await resp.text();
            throw new Error(errorText || 'Server Error');
        }

        const res = await resp.json();
        
        if (res.success) {
            location.reload(); 
        } else {
            throw new Error(res.error || 'Error desconocido');
        }
    } catch (e) {
        console.error('Featured Update Error:', e);
        Swal.fire({
            icon: 'error',
            title: 'No se pudo aplicar el cambio',
            text: e.message,
            confirmButtonColor: '#f0427c'
        }).then(() => location.reload());
    }
}

// Close modal on escape
document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeSelector();
});
</script>
{% endblock %}
